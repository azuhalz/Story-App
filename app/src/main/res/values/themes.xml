<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <style name="Image.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Image.Large">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">280dp</item>
    </style>
    
    <style name="MatchWrap.TextName">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MatchWrap.TextDesc">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MatchWrap.TextName.Login">
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MatchWrap.TextView">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MatchWrap.Card">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="MatchWrap.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MatchWrap.Logout">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
</resources>